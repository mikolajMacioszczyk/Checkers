<Window x:Class="DesktopCheckers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopCheckers"
        mc:Ignorable="d"
        Title="Checkers" 
        MinHeight="900" Height="900" MaxHeight="900"
        MinWidth="900" Width="900" MaxWidth="900">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="{Binding Message}" />
        </StackPanel>
        
        <Grid>
            <Grid.RowDefinitions >
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="2" Background="Gray" MouseLeftButtonUp="StackPanel_MouseLeftButtonUp" >
                <Ellipse Width="80" Height="80" Fill="White" Margin="10" />
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="4" Background="Gray" />
            <StackPanel Grid.Row="0" Grid.Column="6" Background="Gray" />
            <StackPanel Grid.Row="0" Grid.Column="8" Background="Gray" />
            <StackPanel Grid.Row="1" Grid.Column="1" Background="Gray" />
            <StackPanel Grid.Row="1" Grid.Column="3" Background="Gray" />
            <StackPanel Grid.Row="1" Grid.Column="5" Background="Gray" />
            <StackPanel Grid.Row="1" Grid.Column="7" Background="Gray" />
            <StackPanel Grid.Row="2" Grid.Column="2" Background="Gray" />
            <StackPanel Grid.Row="2" Grid.Column="4" Background="Gray" />
            <StackPanel Grid.Row="2" Grid.Column="6" Background="Gray" />
            <StackPanel Grid.Row="2" Grid.Column="8" Background="Gray" />
            <StackPanel Grid.Row="3" Grid.Column="1" Background="Gray" />
            <StackPanel Grid.Row="3" Grid.Column="3" Background="Gray" />
            <StackPanel Grid.Row="3" Grid.Column="5" Background="Gray" />
            <StackPanel Grid.Row="3" Grid.Column="7" Background="Gray" />
            <StackPanel Grid.Row="4" Grid.Column="2" Background="Gray" />
            <StackPanel Grid.Row="4" Grid.Column="4" Background="Gray" />
            <StackPanel Grid.Row="4" Grid.Column="6" Background="Gray" />
            <StackPanel Grid.Row="4" Grid.Column="8" Background="Gray" />
            <StackPanel Grid.Row="5" Grid.Column="1" Background="Gray" />
            <StackPanel Grid.Row="5" Grid.Column="3" Background="Gray" />
            <StackPanel Grid.Row="5" Grid.Column="5" Background="Gray" />
            <StackPanel Grid.Row="5" Grid.Column="7" Background="Gray" />
            <StackPanel Grid.Row="6" Grid.Column="2" Background="Gray" />
            <StackPanel Grid.Row="6" Grid.Column="4" Background="Gray" />
            <StackPanel Grid.Row="6" Grid.Column="6" Background="Gray" />
            <StackPanel Grid.Row="6" Grid.Column="8" Background="Gray" />
            <StackPanel Grid.Row="7" Grid.Column="1" Background="Gray" />
            <StackPanel Grid.Row="7" Grid.Column="3" Background="Gray" />
            <StackPanel Grid.Row="7" Grid.Column="5" Background="Gray" />
            <StackPanel Grid.Row="7" Grid.Column="7" Background="Gray" />
        </Grid>
    </DockPanel>
</Window>
